<resources>

    <style name="Theme.MyBAD" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.AppSplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MyBAD</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
    </style>

</resources>
